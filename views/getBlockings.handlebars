<div class="row col-md-12 mt-5">
  <div class="col-md-1"></div>

  {{!-- 人物欄位 --}}
  {{>targetUser}}
  
  <div class="col-md-1"></div>

  {{!-- Blockings 欄位 --}}
  <div class="col-md-6">
    <h1><strong>Blocking List</strong></h1>
    {{!-- 判斷是從哪邊進入這個頁面，post 的話要調整新增的被封鎖人背景為黃色，只是要看自己的封鎖清單的話不用 --}}
    {{#ifCond tab 'blocking'}}
    {{#each blockings}}
    <div class="col-md-12 mb-3 border bg-white">
      <div class="row no-gutters">
        <div class="col-md-4">
          <img src="{{this.avatar}}" style="max-height: 150px;" class="rounded-circle" alt="avatar">
        </div>
        <div class="col-md-7">
          <div class="">
            <h5>
              <a href="/users/{{ this.id }}/tweets">{{ this.name }}</a>
            </h5>
            <p class="card-text">{{this.introduction}}</p>
            <form action="/blockships/{{ this.id }}?_method=DELETE" method="POST">
              <button type="submit" class="btn btn-danger">UnBlock</button>
            </form>
          </div>
        </div>
      </div>
    </div>
    {{/each}}
  </div>
  {{else}}
  {{#each blockings}}
  {{#if @first}}
  <div class="col-md-12 mb-3 border" style="background-color: yellow;">
    {{else}}
    <div class="col-md-12 mb-3 border bg-white">
      {{/if}}
      <div class="row no-gutters">
        <div class="col-md-4">
          <img src="{{this.avatar}}" style="max-height: 150px;" class="rounded-circle" alt="avatar">
        </div>
        <div class="col-md-7">
          <div class="">
            <h5>
              <a href="/users/{{ this.id }}/tweets">{{ this.name }}</a>
            </h5>
            <p class="card-text">{{this.introduction}}</p>
            <form action="/blockships/{{ this.id }}?_method=DELETE" method="POST">
              <button type="submit" class="btn btn-danger">UnBlock</button>
            </form>
          </div>
        </div>
      </div>
    </div>
    {{/each}}
  </div>
  {{/ifCond}}


</div>